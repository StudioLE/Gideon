{
  
  "source": {
    // Path to parent directory of potential backup sources
    // Typically your vhost or server directory
    "parent_directory": "sample"
  },

  "destination": {
    "s3": {

      // S3 access key id
      "accessKeyId": "AWS_ACCESS_KEY_ID",

      // S3 access key secret
      "secretAccessKey": "AWS_ACCESS_KEY_SECRET",

      // S3 region
      "region": "eu-west-1",

      // S3 bucket
      "bucket": "S3_BUCKET",

      // S3 directory
      "directory": ""
    },
    "local": {

      // Local directory
      "directory": "output"
    }
  },

  // Which destination to use
  "target": "s3",

  // Backup format
  // zip, tar or tar.gz
  "format": "tar.gz",

  // Options only used for gzip
  "gzip_options": {
    // Compression level
    // 1 (min) - 9 (max)
    "level": 9
  }
}
